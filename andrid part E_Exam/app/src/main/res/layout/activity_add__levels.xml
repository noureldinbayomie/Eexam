<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_level_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Level Name"
            android:padding="8dp"
            android:background="@drawable/et_white_solid_color"/>


        <Button
            android:id="@+id/btn_add_department"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/faculty_login_btn"
            android:text="Departments"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/liner_layout_add_department"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_margin="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    >

    <Button

        android:id="@+id/btn_save_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/faculty_login_btn"/>

</LinearLayout>
</LinearLayout>