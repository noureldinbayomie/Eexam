<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">






    <EditText
        android:id="@+id/et_true_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="Question"
        android:layout_margin="24dp"
        />

    <Spinner
        android:id="@+id/spinner_true_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:entries="@array/true_or_false"/>

    <Spinner
        android:id="@+id/spinner_true_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:entries="@array/question_category"
        />




    <Button
        android:id="@+id/btn_save_true_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="right"
        android:layout_margin="24dp"
        android:text="save"
        android:textAllCaps="false"
        android:textSize="18sp"/>



</LinearLayout>